{
  "name": "starter-boilerplate",
  "version": "0.0.1",
  "description": "Boilerplate starter project for different backend setups.",
  "main": "index.js",
  "scripts": {
    "start": "npx nodemon --exec babel-node index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "plugin:prettier/recommended",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "root": true,
    "env": {
      "node": true,
      "browser": false,
      "es6": true
    },
    "rules": {
      "prettier/prettier": "error"
    }
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "node_modules"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test",
      "pre-push": "npm test",
      "...": "..."
    }
  },
  "author": "Fred Hawk",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-prettier": "^2.6.0",
    "husky": "^1.0.0-rc.9",
    "jest": "^23.1.0",
    "nodemon": "^1.17.5",
    "prettier": "^1.13.5"
  },
  "dependencies": {
    "apollo-server": "^2.0.0-rc.2",
    "dotenv": "^6.0.0",
    "graphql": "^0.13.2"
  }
}
