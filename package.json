{
  "name": "starter-boilerplate",
  "version": "0.0.1",
  "description": "Boilerplate starter project for different backend setups.",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon --exec babel-node src/index.js",
    "build": "babel src --out-dir dist",
    "lint-staged": "lint-staged",
    "format": "prettier --write \"**/*.+(js|md|ts|css|sass|less|graphql|yml|yaml|scss|json|vue)\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "jest": {
    "testEnvironment": "node",
    "modulePathIgnorePatterns": [
      "node_modules",
      "dist"
    ],
    "testURL": "http://localhost/",
    "transformIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test && lint-staged",
      "pre-push": "npm run test && lint-staged"
    }
  },
  "author": "Fred Hawk",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.1.6",
    "@babel/node": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/preset-env": "^7.1.6",
    "eslint": "^5.8.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^2.10.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-prettier": "^2.7.0",
    "husky": "^1.1.3",
    "jest": "^23.6.0",
    "lint-staged": "^7.3.0",
    "nodemon": "^1.18.7",
    "prettier": "^1.15.1"
  },
  "dependencies": {
    "bcrypt": "^3.0.0",
    "apollo-server": "^2.1.0",
    "dotenv": "^6.1.0",
    "faker": "^4.1.0",
    "graphql": "^0.13.2",
    "graphql-resolvers": "^0.2.2",
    "jsonwebtoken": "^8.3.0",
    "mongodb": "^3.1.6",
    "mongodb-memory-server": "^2.2.0",
    "mongoose": "^5.2.2"
  }
}
