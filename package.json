{
  "name": "starter-boilerplate",
  "version": "0.0.1",
  "description": "Boilerplate starter project for different backend setups.",
  "main": "index.js",
  "scripts": {
    "start": "npx nodemon --exec babel-node index.js",
    "lint-staged": "lint-staged",
    "format": "prettier --write \"**/*.+(js|md|ts|css|sass|less|graphql|yml|yaml|scss|json|vue)\"",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "node_modules"
    ],
    "testURL": "http://localhost/"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test && lint-staged",
      "pre-push": "npm run test && lint-staged"
    }
  },
  "author": "Fred Hawk",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "eslint": "^5.3.0",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-prettier": "^2.6.2",
    "husky": "^1.0.0-rc.13",
    "jest": "^23.4.2",
    "lint-staged": "^7.2.0",
    "nodemon": "^1.17.5",
    "prettier": "^1.14.1"
  },
  "dependencies": {
    "apollo-server": "^2.0.0",
    "bcrypt": "^3.0.0",
    "dotenv": "^6.0.0",
    "faker": "^4.1.0",
    "graphql": "^0.13.2",
    "jsonwebtoken": "^8.3.0",
    "mongoose": "^5.2.2"
  }
}
